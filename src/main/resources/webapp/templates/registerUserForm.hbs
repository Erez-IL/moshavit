{{! Register Form}}
<fieldset id="RegisterForm">
    <div class="well">
        <div id="legend">
            <legend class="">Register Form</legend>
        </div>
        <div class="control-group">
            <!-- Username -->
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span>
                    <input type="text" id="username" name="username" placeholder="User Name ..." class="input-xlarge">
                </div>
                <div class="controls">
                    <!-- E-mail -->
                    <span class="add-on">E-Mail</span>
                    <input type="email" id="email" name="email"  placeholder="enter your email here" class="input-xlarge" required>
										<p class="help-block">Email address we can contact you on</p>
                </div>
                <!-- First Name -->
                <div class="input-prepend">
                    <span class="add-on">FirstName</span>
                    <input type="text" id="firstName" name="firstName" placeholder="First Name ..." class="input-xlarge">
                    <!-- Last Name -->
                    <span class="add-on">LastName</span>
                    <input type="text" id="lastName" name="lastName" placeholder="Last Name ..." class="input-xlarge">
                </div>
                <!-- Membership Type-->
                <div class="input-prepend">
                    <span class="add-on">Membership</span>
                    <select id="membership" class="span2">
                        <option>resident</option>
                        <option>member</option>
                    </select>
                </div>
                <!-- Password-->
                <label class="control-label" for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
                <p class="help-block">Password should be at least 4 characters</p>
                <!-- Password confirm -->
                <label class="control-label" for="password_confirm">Password (Confirm)</label>
                <input type="password" id="password_confirm" name="password_confirm" placeholder="" class="input-xlarge">
                <p class="help-block">Please confirm password</p>
                <!-- Button Register-->
                <button id="addUserFromForm" class="btn btn-success">Register</button>
								<button id="cancelForm" class="btn btn-warning"><i class="icon-remove icon-white"></i> Close</button>


            </div>
        </div>
        <script src="js/vendor/jqBootstrapValidation.js"/>
        <script src="js/userService.js"/>
		</div>
</fieldset>