<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close closeForm" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Registration Form</h3>
    </div>
    <div class="modal-body">

			{{! Registration Form}}
        <!-- Username -->
        <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <input type="messageText" id="username" name="username" placeholder="User Name ..." class="input-xlarge">
        </div>
        <div class="input-prepend">
            <!-- E-mail -->
            <span class="add-on">E-Mail</span>
            <input type="email" id="email" name="email" placeholder="enter your email here"
                   class="input-xlarge" required="required">

            <p class="help-block">Email address we can contact you on</p>
        </div>
        <div class="input-prepend">
            <!-- First Name -->
            <span class="add-on">FirstName</span>
            <input type="messageText" id="firstName" name="firstName" placeholder="First Name ..."
                   class="input-xlarge">
            <!-- Last Name -->
            <span class="add-on">LastName</span>
            <input type="messageText" id="lastName" name="lastName" placeholder="Last Name ..." class="input-xlarge">
        </div>
        <div class="input-prepend">
            <!-- Membership Type-->
            <span class="add-on">Membership</span>
            <select id="membership" class="span2">
                <option>resident</option>
                <option>member</option>
            </select>
        </div>
        <!-- Password-->
        <label class="control-label" for="password">Password</label>
        <input type="password" id="password" name="password" class="input-xlarge">

        <p class="help-block">Password should be at least 4 characters</p>
        <!-- Password confirm -->
        <label class="control-label" for="password_confirm">Password (Confirm)</label>
        <input type="password" id="password_confirm" name="password_confirm" class="input-xlarge">

        <p class="help-block">Please confirm password</p>
    </div>
    <div class="modal-footer">
        <!-- Button Register-->
        <button id="submitForm" class="btn btn-success">Register</button>
        <button class="btn btn-warning closeForm" data-dismiss="modal" aria-hidden="true"><i
                class="icon-remove icon-white"></i> Close
        </button>
    </div>
</div>